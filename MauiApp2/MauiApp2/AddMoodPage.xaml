<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.AddMoodPage"
             Title="Add Mood">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="How are you feeling?" FontSize="18" />
        <Editor x:Name="moodEntry" Placeholder="Mood (e.g. Happy, Sad)" AutoSize="TextChanges" />

        <Label Text="Any notes you'd like to add?" FontSize="18" />
        <Editor x:Name="notesEntry" Placeholder="Write your thoughts here..." AutoSize="TextChanges" />

        <Button Text="Save Mood" Clicked="OnSaveClicked" />
    </VerticalStackLayout>

</ContentPage>
