<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.RegisterPage"
             Title="Register">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Create a ChimeIn account" FontSize="20" HorizontalOptions="Center" />

        <Entry x:Name="usernameEntry" Placeholder="Username" />
        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Register" Clicked="OnRegisterClicked" />

        <Label x:Name="errorLabel" TextColor="Red" IsVisible="False"/>
    </VerticalStackLayout>
</ContentPage>
