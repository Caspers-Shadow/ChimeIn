<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.LoginPage"
             Title="Login">
    <VerticalStackLayout Padding="20" Spacing="15">

        <Label Text="Welcome to ChimeIn!" FontSize="24" HorizontalOptions="Center" />

        <Entry x:Name="emailEntry" Placeholder="Email" Keyboard="Email" />
        <Entry x:Name="passwordEntry" Placeholder="Password" IsPassword="True" />

        <Button Text="Login" Clicked="OnLoginClicked" />
        <Button Text="Register Instead" Clicked="OnRegisterClicked" />

        <Label x:Name="errorLabel" TextColor="Red" IsVisible="False"/>
    </VerticalStackLayout>
</ContentPage>
